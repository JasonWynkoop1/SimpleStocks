<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs360.simplestocks.activities.SplashActivity">

    <LinearLayout
        android:id="@+id/splash_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/splash_screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="250sp"
            android:text="@string/simple_stocks"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorSimpleStocksTitle"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/splash_screen_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stock_trading_made_simple"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingLeft="100dp"
            android:paddingTop="60dp"
            android:paddingRight="100dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>