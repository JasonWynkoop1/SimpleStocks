<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="20sp"
    android:paddingTop="50sp"
    android:paddingRight="20sp"
    android:paddingBottom="50sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:divider="@color/colorSimpleStocksTitle"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="50dp">

        <Switch
            android:id="@+id/stay_logged_in_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay logged in"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/turn_off_notifications_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Notifications"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/authentication_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Email authentication"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sign_out_button"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:background="@color/colorPrimary"
            android:text="@string/sign_out"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>